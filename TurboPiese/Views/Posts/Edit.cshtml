@model TurboPiese.Models.Post
<h2 class="text-center mt-5">Editare postare</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Posts" asp-route-id="@Model.Id">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Price" class="form-label">Pretul Nou</label>
                    <br />
                    <input asp-for="Price" class="form-control" />

                    <span asp-validation-for="Price" class="text-danger"></span>

                    <br /><br />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-label">Descrierea Noua</label>
                    <br />
                    <textarea asp-for="Description" class="form-control"></textarea>

                    <span asp-validation-for="Description" class="text-danger"></span>

                    <br /><br />
                </div>
                @if (ViewBag.EsteAdmin == true)
                {
                    <div class="form-group">
                        <label for="ProductId">Selectati produsul</label>
                        <br />
                        <select asp-for="ProductId" asp-items="Model.ProductList" class="form-control">
                            <option value="">Selectati produsul</option>
                        </select>

                        <span asp-validation-for="ProductId" class="text-danger"></span>

                        <br />
                    </div>
                }
                <button class="btn btn-primary-custom" type="submit">Modifica postarea</button>

            </form>
        </div>
    </div>
</div>


