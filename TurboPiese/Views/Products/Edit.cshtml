@model TurboPiese.Models.Product
<h2 class="text-center mt-5">Editare produs</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form enctype="multipart/form-data" method="post" asp-action="Edit" asp-controller="Products" asp-route-id="@Model.Id">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Numele nou</label>
                    <br />
                    <input asp-for="Name" class="form-control" />

                    <span asp-validation-for="Name" class="text-danger"></span>

                    <br /><br />
                </div>
                <div class="form-group">
                    <label asp-for="Image">Incarca Imaginea</label>
                    <input asp-for="Image" class="form-control" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Stock" class="form-label">Stocul nou</label>
                    <br />
                    <input asp-for="Stock" class="form-control" />

                    <span asp-validation-for="Stock" class="text-danger"></span>

                    <br /><br />
                </div>
                @if (ViewBag.EsteAdmin == true)
                {
                    <div class="form-group">
                        <label for="CategoryId">Selectati categoria</label>
                        <br />
                        <select asp-for="CategoryId" asp-items="Model.Categ" class="form-control">
                            <option value="">Selectati categoria</option>
                        </select>

                        <span asp-validation-for="CategoryId" class="text-danger"></span>

                        <br />
                    </div>
                }

                <button class="btn btn-primary-custom" type="submit">Modifica produsul</button>

            </form>
        </div>
    </div>
</div>


